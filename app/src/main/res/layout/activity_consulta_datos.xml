<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Consultar datos"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            />

        <Spinner
            android:id="@+id/spnTipoFrutoCd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            >

            <TextView
                android:id="@+id/txtDesde"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Desde: "
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@color/black"
                />

            <DatePicker
                android:id="@+id/dpDesde"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_toRightOf="@id/txtDesde"
                />

            <TextView
                android:id="@+id/txtHasta"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Hasta: "
                android:gravity="center"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:layout_below="@id/txtDesde"
                />

            <DatePicker
                android:id="@+id/dpHasta"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/dpDesde"
                android:layout_toRightOf="@id/txtHasta"
                />
        </RelativeLayout>

        <Button
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:text="Consultar"
            android:onClick="hallarDatos"
        />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:text="ProducciÃ³n"
            android:textSize="20sp"
            android:textColor="@color/black"
            />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chProduccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:text="Registros"
            android:textSize="20sp"
            android:textColor="@color/black"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            >

            <ListView
                android:id="@+id/lstRFecha"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                />
            <ListView
                android:id="@+id/lstRProducto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

    </LinearLayout>
</ScrollView>